<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconStyle">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
        <item name="android:src">@drawable/icon</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/header_text</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:layout_marginStart">@dimen/header_margin_start</item>
    </style>

    <style name="category_button">
        <item name="android:layout_width">@dimen/category_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">@dimen/category_button_padding</item>
        <item name="android:text">@string/category_button_text</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
    </style>

    <style name="select_button">
        <item name="android:layout_width">@dimen/select_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_set_image</item>
        <item name="android:layout_marginBottom">@dimen/select_button_marginBottom</item>
        <item name="android:padding">@dimen/select_button_padding</item>
        <item name="android:text">@string/select_button_text</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>